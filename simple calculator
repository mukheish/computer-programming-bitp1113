
#include <iostream> 
using namespace std; 

int main() 
{ 
	char op; 
	float num1, num2;
	
	cout<< "Enter number: ";
    cin>> num1; 
	
	cout<< "Enter operation: " ;
	cin >> op; 
	
	cout<< "Enter number: ";
	cin>> num2;

	switch (op) 
	{ 

		case '+': 
			cout << num1 + num2; 
			break;
			
		case '-': 
			cout << num1 - num2; 
			break; 
		
		case '*': 
			cout << num1 * num2; 
			break; 
		
		case '/': 
			cout << num1 / num2; 
			break; 
		
		default: 
			cout << "Error! operator is not correct"; 
			break; 
	}

	return 0; 
} 
